<?xml version='1.0' encoding='UTF-8' ?>
<odoo>

    <record id="view_e_formulaire_status_filter" model="ir.ui.view">
        <field name="name">e.formulaire.type.filter</field>
        <field name="model">e.formulaire.type</field>
        <field name="arch" type="xml">
            <search string="Search Type de formulaire">
                <field name="name" string="Type de Formulaire"/>
                <field name="code"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>

    <record id="edit_e_formulaire_status_form" model="ir.ui.view">
        <field name="name">e.formulaire.type.form</field>
        <field name="model">e.formulaire.type</field>
        <field name="arch" type="xml">
            <form string="Type de Formulaire">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group name="description" string="Options">
                            <field name="active" invisible="1"/>
                            <field name="code" string="Code"/>
                        </group>
                        <group name="validitee" string="Validitée">
                            <label for="duree_validite" string="Durée de Validitée" />
                            <div class="o_row" name="duree_validite">
                                <field name="duree_validite"/>
                                <field name="duration_unit" />
                            </div>
                            <field name="renouvellement"/>
                        </group>

                        <group name="validation_type" string="Type d'Approbation">
                            <field name="validation_type" string="Approbation" widget="radio"/>
                        </group>
                        <group string="Responsable" attrs="{'invisible': [('validation_type', 'in', ['no_validation','multi'])]}">
                            <field name="assigner" string="Responsable" />
                            <field name="department_id"  />
                        </group>
                         <group string="Niveaux d'approbation" attrs="{'invisible': [('validation_type', 'in', ['no_validation','hr'])]}">
                            <field name="first_validateor_id" attrs="{'required': [('validation_type', '=', 'multi')]}"/>
                            <field name="second_validateor_id"  attrs="{'required': [('validation_type', '=', 'multi')]}"/>
                        </group>
                    </group>
                    <group>
                        <group name="">

                        </group>
                        <group>

                        </group>
                    </group>
                     <field name="multi_form_validation" invisible="1"/>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_formulaire_status_normal_tree" model="ir.ui.view">
        <field name="name">e.formulaire.type.normal.tree</field>
        <field name="model">e.formulaire.type</field>
        <field name="arch" type="xml">
            <tree string="Type de Formulaire">
                <field name="name"/>
                <field name="code"/>
                <field name="renouvellement"/>
                <field name="duree_validite"/>
                <field name="validation_type"/>
                <field name="date_request"/>
                <field name="date_exper"/>
            </tree>
        </field>
    </record>


    <record id="open_view_e_formulaire_status" model="ir.actions.act_window">
        <field name="name">Type de Formulaire</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">e.formulaire.type</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
