<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_company_form_view_inherit_form_qr" model="ir.ui.view">
        <field name="name">res.company.form.inherit.formulaire.qr</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group>
                    <field name="form_qr_type"/>
                    <field name="form_field_ids"
                           attrs="{'required':[('form_qr_type','=','by_info')],'invisible':[('form_qr_type','!=','by_info')]}">
                        <tree editable="bottom">
                            <field name="sequence" widget="handle" />
                            <field name="field_id"  />
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>

    <record id="base_document_layout_form" model="ir.ui.view">
            <field name="name">base_document_layout_form.inherit_form_view</field>
            <field name="model">base.document.layout</field>
            <field name="inherit_id" ref="web.view_base_document_layout" />
            <field name="type">form</field>
            <field name="arch" type="xml">
                 <field name="logo" position="after">
                     <field name="image_banner" widget='image' class="oe_avatar"/>
                </field>
            </field>
        </record>

    <record id="paperformat_AttestA4" model="report.paperformat">
      <field name="name">Attestation A4</field>
      <field name="default" eval="True"/>
      <field name="format">custom</field>
      <field name="page_height">279</field>
      <field name="page_width">210</field>
      <field name="orientation">Portrait</field>
      <field name="margin_top">40</field>
      <field name="margin_bottom">40</field>
      <field name="margin_left">7</field>
      <field name="margin_right">7</field>
      <field name="header_line" eval="False"/>
      <field name="header_spacing">35</field>
      <field name="dpi">90</field>
    </record>

</odoo>
