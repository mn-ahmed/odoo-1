      <template id="e_formulaire_installation_industrielle" name="Installation Industrielle">
        <t t-call="website.layout">
         <div id="wrap">
                <div class="container">
                    <div class="col-md-12">
                        <form action="/installation_industrielle/submit">
                            <div class="form-group">
                                <label for="name">Name:</label>
                                <input type="text" class="form-control" name="name" id="name" required="true" />
                            </div>
                            <div class="form-group">
                                <label for="email">Email address:</label>
                                <input type="email" class="form-control" name="email" id="email" required="true" />
                            </div>
                            <div class="form-group">
                                <label for="name">Phone:</label>
                                <input type="text" class="form-control" name="phone" id="phone" required="true" />
                            </div>
                            <button type="submit" class="btn btn-primary">Ajouter</button>
                        </form>
                    </div>
                </div>
              </div>
        </t>
      </template>

