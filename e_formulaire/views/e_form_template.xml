    <!-- Liste des demmande d'autorisation d'installation industrielle -->
    <template id="list_des_demmande">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <div class="card">
                <div class="card-header ">
                    <h4>
                        Demande d'autorisation d'installation industrielle
                    </h4>
                </div>
                <div class="card-body">
                    <form action="/my/installation_industrielle" method="post" role='form' class="s_website_form">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <div >
                            <div t-attf-class="form-group col-md-6 ">
                                <label for="start_date">Start Date
                                    <span style="color:red">*</span>
                                </label>
                                <input type="date" t-att-value='start_date' t-attf-class="form-control" name="start_date" id="start_date" placeholder="Start Date" required='1' />
                            </div>
                            <div t-attf-class="form-group  col-md-6 ">
                                <label for="end_date">End Date
                                    <span style="color:red">*</span>
                                </label>
                                <input type="date" t-att-value='end_nate' t-attf-class="form-control" name="end_date" id="end_date" placeholder="End Date" required='1' />
                            </div>
                        </div>
                        <div t-attf-class="form-group  col-md-6 ">
                            <label for="status">Status</label>
                            <select name="status" class="form-control" id="status">
                                <option  t-att-selected='status =="draft"' t-attf-value="draft">Brouillon</option>
                                <option  t-att-selected='status =="confirm"' t-attf-value="sent">à Approuver</option>
                                <option  t-att-selected='status =="approuve"' t-attf-value="sale">Approuver</option>
                                <option  t-att-selected='status =="done"' t-attf-value="done">Locked</option>
                                <option  t-att-selected='status =="cancel"' t-attf-value="cancel">Cancel</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary ">Appliquer</button>
                    </form>
                </div>
                <div t-if="methods">
                    <t t-foreach="commandes" t-as="ref">
                        <div class="card text-left">
                            <div class="card-header">
                                <span t-field="ref.number"/>
                            </div>
                        </div>
                        <div class="card-body">
                            <h2>Liste des Commandes</h2>
                            <br/>
                            <br/>
                            <h4 class="card-title">
                       Dommande :
                                <span t-field="ref.number"/>
                            </h4>
                            <p class="card-text">Entreprise :
                                <span t-esc="ref.partner_id.name"/>
                            </p>
                            <p class="card-text">Addresse :
                                <span t-esc="ref.partner_id.street"/>,
                                <span t-esc="ref.partner_id.state_id.name"/>,
                                <span t-esc="ref.partner_id.country_id.name"/>
                            </p>
                            <p class="card-text">Date de Demmande :
                                <span t-esc="ref.date_request"/>,
                            </p>
                            <p class="card-text">Date d'Approbation :
                                <span t-esc="ref.date_approbation"/>,
                            </p>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>

    <template id="list_des_demmande_view" name="order view">
            <t t-call="portal.portal_layout">
                <t t-set="breadcrumbs_searchbar" t-value="True"/>
                <t t-call="portal.portal_searchbar">
                    <t t-set="title">So Order</t>
                </t>
                <t t-if="not ref">
                    <p>There are currently no order for your account.</p>
                </t>
                <t t-foreach="commandes" t-as="ref">
                    <div class="card text-left">
                        <div class="card-header">
                            <span t-field="ref.name"/>
                        </div>
                    </div>
                    <div class="card-body">
                        <h2>List Sales Orders</h2>
                        <br/>
                        <br/>
                        <h4 class="card-title">
                       Sale Order :
                            <span t-field="ref.name"/>
                        </h4>
                        <p class="card-text">Customer :
                            <span t-esc="ref.partner_id.name"/>
                        </p>
                        <p class="card-text">Customer Address :
                            <span t-esc="ref.partner_id.street"/>
,
                            <span t-esc="ref.partner_id.state_id.name"/>
,
                            <span t-esc="ref.partner_id.country_id.name"/>
                        </p>
                        <p class="card-text">Date de Demmande :
                            <span t-esc="ref.date_request"/>
                        </p>
                        <p class="card-text">Date d'appobation :
                            <span t-esc="ref.date_approbation"/>
                        </p>
                    </div>
                </t>
                <button onclick="api_call()">call api</button>
            </t>
            <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
