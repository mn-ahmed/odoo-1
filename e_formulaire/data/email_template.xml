<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!--Email template -->
        <record id="dii_email_template" model="mail.template">
            <field name="name">DII Email Template</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="email_from">${object.user_id.email}</field>
            <field name="email_to">${object.partner_id.email}</field>
            <field name="subject">Approbation de demande de ${object.name}</field>
            <field name="body_html" type="html">
                <div style="">
                    <p style="margin:0px; padding: 0px;">
                        Mr: ${object.partner_id.name}
                        <br/>
                        Votre demande a été approuver ..
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>